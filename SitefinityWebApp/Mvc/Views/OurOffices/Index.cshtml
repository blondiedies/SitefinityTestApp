@using Telerik.Sitefinity.Frontend.Mvc.Helpers;

@model List<SitefinityWebApp.Mvc.ViewModels.OfficeViewModel>
<div>
    <ul class="list-unstyled row news-list-page">
        @foreach (var office in Model)
            {
                <li class="col-md-4">
                    <h2>@office.Title</h2>
                    <img src="@office.Picture.LinkedContentUrl" alt="@office.Picture.AlternativeText" class="mb-3" />
                    <p>@Html.HtmlSanitize(office.Info)</p>
                </li>
            }


    </ul>
</div>